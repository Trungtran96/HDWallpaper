<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">#ffffff</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">#ffffff</item>

        <item name="android:textCursorDrawable">@drawable/cursor_color</item>

    </style>

    <style name="zoom_2">
        <item name="android:windowEnterAnimation">@anim/zoom_out_2</item>
        <item name="android:windowExitAnimation">@anim/zoom_in_2</item>
    </style>

</resources>
